<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/project_image"
                android:layout_width="100dp"
                android:layout_height="110dp" />
            <TextView
                android:id="@+id/project_id"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_below="@id/project_image"/>

            <TextView
                android:id="@+id/project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/project_image"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/project_image"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/project_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/project_name"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/project_image"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/project_starting"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/project_purpose"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/project_image"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/project_ending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/project_purpose"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/project_starting"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/project_funder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/project_starting"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/project_image"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>